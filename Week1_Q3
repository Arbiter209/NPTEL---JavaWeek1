/* Consider first n even numbers starting from zero(0).Complete the code segment to calculate sum of  all these numbers divisible by 3 . 
Print the sum. */
import java.util.Scanner;
public class Exercise1_3 
{
     public static void main(String[] args) 
     {
	      Scanner sc = new Scanner(System.in);
	      int n=sc.nextInt();
	      int sum=0;
        int p=2;
        for(int i=0;i<n;i++)
        {
            if(p%3==0)
            {
                sum=sum+p;
                p=p+2;
            }
            else
            {
                p=p+2;
            }
        }
        System.out.print(sum);
    }
}
